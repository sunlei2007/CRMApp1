@page "/customer/CustomerMain"
@inject HttpClient Http

<PageTitle>CustomerManage</PageTitle>
<div class="query-area"><input type="text" name="customerName" @bind-value="CustomerName" class="query-condition" placeholder="Enter customer name" /><input type="text" name="addr" @bind-value="Address" class="query-condition" placeholder="Enter customer address" /><button class="query-btn">Search</button></div>
<table class="table table-hover table-bordered" style="margin-top:20px;">
    <thead class="table-light ">
        <tr>
            <th style="width:200px">Name</th>
            <th style="width:400px">Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in customerList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
            
            </tr>
        }
    </tbody>
</table>
