@inherits LayoutComponentBase
@inject CRMApp.Auth.ILoginServices loginService;

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <div class="page">
                <div class="sidebar">
                    <NavMenu />
                </div>

                <main>
                    <div class="top-row px-4">
                        <button class="btn btn-primary" @onclick="OnClick">LogOut</button>
                    </div>

                    <article class="content px-4">
                        @Body
                    </article>
                </main>
            </div>
        </Authorized>
        <NotAuthorized>
            <Login/>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
@code
{
   public async Task OnClick()
   {
        await loginService.Logout();
   }
}